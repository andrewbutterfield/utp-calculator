%
% doclevels.sty
%
% Labelling document parts top-down
% independently of actual documentclass
%
%  (c) 2105 Andrew Butterfield
%
% for now we simply handle report vs. article


\@ifclassloaded{article}
  {
    \def\HDRo#1{}
    \def\HDRa#1{\section{#1}}
    \def\HDRb#1{\subsection{#1}}
    \def\HDRc#1{\subsubsection{#1}}
    \def\HDRd#1{\paragraph{#1}}
    \def\HDRe#1{\subparagraph{#1}}
    \def\HDRf#1{\subparagraph{#1}}
    \def\HDRastar#1{\section*{#1}}
    \def\HDRbstar#1{\subsection*{#1}}
    \def\HDRcstar#1{\subsubsection*{#1}}
    \def\HDRdstar#1{\paragraph*{#1}}
    \def\HDRestar#1{\subparagraph*{#1}}
    \def\HDRfstar#1{\subparagraph*{#1}}
  }
  {
    \def\HDRo#1{\part{#1}}
    \def\HDRa#1{\chapter{#1}}
    \def\HDRb#1{\section{#1}}
    \def\HDRc#1{\subsection{#1}}
    \def\HDRd#1{\subsubsection{#1}}
    \def\HDRe#1{\paragraph{#1}}
    \def\HDRf#1{\subparagraph{#1}}
    \def\HDRastar#1{\chapter*{#1}}
    \def\HDRbstar#1{\section*{#1}}
    \def\HDRcstar#1{\subsection*{#1}}
    \def\HDRdstar#1{\subsubsection*{#1}}
    \def\HDRestar#1{\paragraph*{#1}}
    \def\HDRfstar#1{\subparagraph*{#1}}
  }
